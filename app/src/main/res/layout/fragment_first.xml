<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">


    <TextView
        android:id="@+id/cuentaFirstActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="Cuenta:" />


    <TextView
        android:id="@+id/nodecuentaFirstActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="No. de Cuenta:" />

    <TextView
        android:id="@+id/firstfragmentBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:layout_marginStart="10dp"
        android:textSize="40sp"
        android:text="$ 5432.10" />

    <TextView
        android:id="@+id/firsrfragmentlimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"

        android:layout_marginTop="300dp"
        android:layout_marginStart="10dp"
        android:textSize="20sp"
        android:text="Saldo Disponible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:text="Ultimos Movimientos:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/movimientosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="189dp"

        android:layout_marginTop="500dp"

        android:layout_weight="1"
        android:padding="10dp" />

</FrameLayout>